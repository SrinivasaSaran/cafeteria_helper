<article class="home-page">

  <% content_for :header_options do %>

    <section class="additional-header-content">
      <a href="/info" >
        <%= submit_tag "About Us", class: "header-button" %>
      </a>
    </section>

  <% end %>

  <%= form_with(url: signin_path, method: "post", class:"signing-section") do %>
    <%= label_tag :email, "E-mail:", class:"signing-field-label"%><br>
    <%= text_field_tag "email",
                       nil,
                       placeholder: "Your Registered email Id",
                       pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$",
                       title: "Expected Pattern: yyy@yyy.yy",
                       class: "signing-inputbar"
    %><br><br>
    <%= label_tag :password_digest, "Password:", class:"signing-field-label"%><br>
    <%= password_field_tag :password_digest,
                           nil,
                           placeholder: "Your Password",
                           pattern: ".{6,12}",
                           title: "6 to 12 characters",
                           class: "signing-inputbar"
    %><br><br>
    <p class="flash-error"><%= flash[:error] %></p>
    <%= submit_tag "SIGN IN", data: {disable_with: "Checking...."}, class: "signing-button" %>
  <% end %>
  <p class="alternate-signing-field">New User..? --> <%= link_to "Sign Up!", new_user_path %>

</article>
