<article class="home-page">

  <% content_for :header_options do %>

    <section class="header-buttons">
      <a href="https://todo-on-web.herokuapp.com" >
        <%= submit_tag "About Us", class: "button" %>
      </a>
    </section>

  <% end %>

  <%= form_with(class:"signing-section") do %>
    <label class="signing-field-label" for="email">E-mail: </label><br>
    <%= text_field_tag "email",
                       nil,
                       placeholder: "Your Registered email Id",
                       pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$",
                       title: "Expected Pattern: yyy@yyy.yy",
                       class: "signing-inputbar"
    %><br><br>
    <label class="signing-field-label" for="password_digest" >Password: </label><br>
    <%= password_field_tag :password_digest,
                           nil,
                           placeholder: "Your Password",
                           pattern: ".{6,12}",
                           title: "6 to 12 characters",
                           class: "signing-inputbar"
    %><br><br>
    <%= submit_tag "SIGN IN", data: {disable_with: "Checking...."}, class: "signing-button" %>
  <% end %>
  <p class="alternate-signing-field">New user..? --> <%= link_to "Sign Up!" %>

</article>
