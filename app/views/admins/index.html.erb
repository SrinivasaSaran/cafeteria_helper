<article>

  <section>
    <%= render partial: "admins/admins-navigator",
              locals: {
                current_page_name: "Home"
              } %>
  </section>

  <% if @orders.empty? %>
     <h1 class="no-orders-title">No Pending Orders :)</h1>
  <%else%>
    <h1 class="orders-title">All Pending Orders</h1>
    <%= render partial: "orders/generate-invoice",
              locals: {
                orders: @orders.order(:placed_at),
                role: "admin"
              } %>
  <%end%>

</article>
