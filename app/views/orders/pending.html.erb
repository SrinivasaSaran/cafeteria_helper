<article>

  <% content_for :signed_in_header do %>
    <a href="/menus" >
      <%= submit_tag "Menus", class: "header-button" %>
    </a>
    <a href="/orders" >
      <%= submit_tag "All Orders", class: "header-button" %>
    </a>
  <%end%>

  <% content_for :admin_header do %>
    <a href="/">
      <%= submit_tag "Back to Home", class:"admin-navigation-button" %>
    </a>
  <%end%>

  <% if @orders.empty? %>
     <h1 class="no-orders-title">No Pending Orders:)</h1>
     <h1 class="no-orders-title">Visit Menus to place Orders!</h1>
  <%else%>
    <h1 class="orders-title">Pending Orders</h1>
    <%= render partial: "generate-invoice",
              locals: {
                orders: @orders.where(delivered_at: nil)
              } %>
  <%end%>

</article>
